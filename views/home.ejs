<%- include("partials/header"); -%>

	<h1 class="main-title">HOME</h1><br>
	<p class="main-para">Hey ! I'm Ankita. Come join me in my culinary adventures where we'll be using simple, fresh ingredients and transforming them into sophisticated and elegant meals for the everyday home cook.</p><br>

<%	posts.forEach(function(post)
	 { %>
	 	<h1 class="post-title-style"> <%= post.title %> </h1>
	 	<p class="post-cont-style"> 
	 		<% if(post.content.length >= 100) 
	 			{ %>
	 				<%= post.content.substring(0,100) + "..." %>
	 		 <% }
	 		   else 
	 			{ %>
	 				<%= post.content %>
	 		 <% } %>
	 		<a href="/posts/<%= post._id %>" style="text-decoration:none;font-weight:bold;color:green">READ MORE</a>
	 	</p>
 <%  }); %>
 
<%- include("partials/footer"); -%>